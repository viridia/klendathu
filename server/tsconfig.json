{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "target": "es6",
    "lib": [ "es2015", "esnext.asynciterable" ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./tests/**/*.ts",
  ]
}
